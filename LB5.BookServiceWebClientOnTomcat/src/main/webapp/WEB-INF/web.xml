<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="https://jakarta.ee/xml/ns/jakartaee"
		 xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
		 id="WebApp_ID" version="5.0">
    <display-name>LB5jaxwsBookServiceWebClient</display-name>
    <context-param>
        <description>Wsdl location</description>
        <param-name>wsdl</param-name>
        <param-value>http://localhost:9000/films?wsdl</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <display-name>EncodingFilter</display-name>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.film.server.filter.EncodingFilter</filter-class>
        <init-param>
            <description/>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>ua.nure.film.server.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <description>List existing films</description>
        <display-name>ListFilms</display-name>
        <servlet-name>ListFilms</servlet-name>
        <servlet-class>ua.nure.film.server.client.web.ListFilmsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFilms</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddFilm</display-name>
        <servlet-name>AddFilm</servlet-name>
        <servlet-class>ua.nure.film.server.client.web.AddFilmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFilm</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>AddTicket</display-name>
        <servlet-name>AddTicket</servlet-name>
        <servlet-class>ua.nure.film.server.client.web.AddTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTicket</servlet-name>
        <url-pattern>/addTicket</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>FindTicket</display-name>
        <servlet-name>FindTicket</servlet-name>
        <servlet-class>ua.nure.film.server.client.web.FindTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindTicket</servlet-name>
        <url-pattern>/findTicket</url-pattern>
    </servlet-mapping>
    <servlet>
        <description/>
        <display-name>RemoveFilm</display-name>
        <servlet-name>RemoveFilm</servlet-name>
        <servlet-class>ua.nure.film.server.client.web.RemoveFilmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFilm</servlet-name>
        <url-pattern>/deleteFilm</url-pattern>
    </servlet-mapping>
</web-app>